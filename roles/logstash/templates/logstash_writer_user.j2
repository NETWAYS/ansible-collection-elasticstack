{
{% if logstash_password_hash | bool %}
{# using a fixed salt is neccessary for idempotency, will be created on elasticstack CA host #}
  "password_hash" : "{{ logstash_password | password_hash( hashtype=logstash_password_hash_algorithm, salt=logstash_password_hash_salt, ident='2a' ) }}",
{% else %}
  "password" : "{{ logstash_password }}",
{% endif %}
  "roles" : [ "logstash_writer"],
  "full_name" : "Internal Logstash User"
}
