{
{% if logstash_password_hash | bool and logstash_password_hash_salt is defined %}
{# using a fixed salt is neccessary for idempotency #}
  "password_hash" : "{{ logstash_password | password_hash(hashtype='sha256', salt=logstash_password_hash_salt) }}",
{% else %}
  "password" : "{{ logstash_password }}",
{% endif %}
  "roles" : [ "logstash_writer"],
  "full_name" : "Internal Logstash User"
}
